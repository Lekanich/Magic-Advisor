<idea-plugin>
    <id>lekanich.magic-advisor</id>
    <name>Magic Advisor</name>
    <vendor email="lekan1992@gmail.com" url="https://github.com/Lekanich/Magic-Advisor"/>

    <description><![CDATA[
        I'm your advisor in hard times. When nobody can tell you what to do - I can!
        Just ask me.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <group id="advisor">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <action id="lekanich.GetAdvise" description="Get advise" text="Get Advise"
                    class="lekanich.GetAdvise" icon="WisdomIcons.MAIN"/>
            <action id="lekanich.MagicBallAdvise" description="Get magic ball 8 advice" text="Magic Ball 8"
                    class="lekanich.MagicBallAdvise" icon="WisdomIcons.MAIN"/>
        </group>
    </actions>
</idea-plugin>